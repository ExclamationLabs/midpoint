        xmlns:t="http://prism.evolveum.com/xml/ns/public/types-3"
        xmlns:ri="http://midpoint.evolveum.com/xml/ns/public/resource/instance/10000000-0000-0000-0000-000000000004">
    <name>Prize: Silver (enforced)</name>
    <assignment>
    	<policyRule>
    		<name>prize exclusion: silver-gold</name>
    		<policyConstraints>
		    	<exclusion>
			    	<targetRef oid="6bff06a9-51b7-4a19-9e77-ee0701c5bfe2" type="RoleType"/> <!-- Gold -->
		    	</exclusion>
		    </policyConstraints>
		    <policyActions>
				<enforcement/>
		    </policyActions>
    	</policyRule>
    </assignment>
    <assignment>
    	<policyRule>
    		<name>prize exclusion: silver-bronze</name>
    		<policyConstraints>
		    	<exclusion>
			    	<targetRef oid="702dc3c9-9755-4880-b132-cf82d5845dd9" type="RoleType"/> <!-- Bronze -->
		    	</exclusion>
		    </policyConstraints>
		    <policyActions>
				<enforcement/>
		    </policyActions>
    	</policyRule>
    </assignment>
    <inducement>
    	<construction>
    		<resourceRef oid="10000000-0000-0000-0000-000000000004" type="ResourceType"/>
    		<kind>account</kind>
    		<attribute>
                <ref>ri:ship</ref>
                <outbound>
                	<expression>
						<value>Silver</value>
					</expression>
				</outbound>
            </attribute>
    	</construction>
    </inducement>
</role>
